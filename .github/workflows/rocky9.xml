---
name: Rockylinux 9 

on:
  push:
    branches: [master]
    paths-ignores:
      - '**.md'

  pull_request:
    branches: [master]

jobs:
  rocky9:
    runs-on: ubuntu-latest
    container: rockylinux/rockylinux:9
    steps:
      - uses: actions/checkout@v3
      - uses: actions/setup-java@v3
        with:
          distribution: 'zulu'
          java-version: '17'
      - name: Install required packages
        run: |
          dnf install -y git make sudo which
          make init
          bash scripts/required_pkgs.sh
      - name: Configuration
        run: |
          make rocky8.conf
          make tomcat.preinst
          make tomcat.action
          make tomcat.exit
      - name: Build Archiver Appliance
        run: |
          make build
          make src_install
          make services.install
      - name: Environment Check
        run: |
          make exist
          make conf.archappl.show
